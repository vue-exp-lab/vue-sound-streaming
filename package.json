{
  "name": "vue-ssr-starter-kit",
  "version": "0.0.0",
  "description": "A Vue.js project wuth vue 2.0, vue-router and vuex for server side rendering.",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/doabit/vue-ssr-starter-kit.git"
  },
  "keywords": [
    "vue",
    "vuex",
    "vue-router",
    "webpack",
    "starter",
    "server-side",
    "boilerplate"
  ],
  "author": "doabit <doinsist@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/doabit/vue-ssr-starter-kit/issues"
  },
  "homepage": "https://github.com/doabit/vue-ssr-starter-kit#readme",
  "scripts": {
    "precommit": "lint-staged",
    "start": "cross-env NODE_ENV=production node server",
    "dev": "node server",
    "build:client": "cross-env NODE_ENV=production webpack --config ./build/webpack.client.config.js --progress --hide-modules",
    "build:server": "cross-env NODE_ENV=production webpack --config ./build/webpack.server.config.js --progress --hide-modules",
    "build": "rimraf dist && npm run build:client && npm run build:server",
    "unit": "karma start ./test/unit/karma.conf.js --single-run",
    "lint-fix": "npx eslint --fix"
  },
  "lint-staged": {
    "src/**/*.{js,vue}": [
      "npm run lint-fix",
      "git add"
    ]
  },
  "dependencies": {
    "axios": "^0.13.1",
    "cross-env": "^3.1.4",
    "express": "^4.14.0",
    "lru-cache": "^4.0.1",
    "p5": "^0.6.1",
    "serialize-javascript": "^1.3.0",
    "serve-favicon": "^2.3.0",
    "vue": "^2.3.4",
    "vue-router": "^2.7.0",
    "vue-server-renderer": "^2.3.4",
    "vuex": "^2.3.0",
    "vuex-router-sync": "^4.1.2"
  },
  "devDependencies": {
    "babel-core": "^6.13.2",
    "babel-eslint": "^7.1.0",
    "babel-loader": "^6.0.0",
    "babel-preset-es2015": "^6.13.2",
    "babel-preset-stage-2": "^6.13.0",
    "chai": "^3.5.0",
    "css-loader": "^0.23.1",
    "eslint": "^3.19.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-config-standard": "^6.0.0-beta.2",
    "eslint-friendly-formatter": "^2.0.6",
    "eslint-loader": "^1.5.0",
    "eslint-plugin-html": "^1.7.0",
    "eslint-plugin-prettier": "^2.6.2",
    "eslint-plugin-promise": "^3.3.0",
    "eslint-plugin-standard": "^2.0.0",
    "extract-text-webpack-plugin": "^2.0.0-beta.3",
    "file-loader": "^0.8.4",
    "html-webpack-plugin": "^2.28.0",
    "husky": "^0.14.3",
    "karma": "^1.1.2",
    "karma-mocha": "^1.1.1",
    "karma-phantomjs-launcher": "^1.0.1",
    "karma-sinon-chai": "^1.2.3",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-spec-reporter": "0.0.26",
    "karma-webpack": "^2.0.2",
    "lint-staged": "^7.2.0",
    "mocha": "^3.0.2",
    "phantomjs-prebuilt": "^2.1.10",
    "prettier": "^1.13.7",
    "rimraf": "^2.6.0",
    "sinon": "^1.17.5",
    "sinon-chai": "^2.8.0",
    "stylus": "^0.54.5",
    "stylus-loader": "^2.4.0",
    "sw-precache-webpack-plugin": "^0.9.1",
    "vue-eslint-parser": "^3.1.0",
    "vue-loader": "^10.0.0",
    "vue-ssr-webpack-plugin": "^1.0.2",
    "vue-template-compiler": "^2.0.0",
    "webpack": "^2.2.1",
    "webpack-bundle-analyzer": "^2.13.1",
    "webpack-dev-middleware": "^1.6.1",
    "webpack-hot-middleware": "^2.12.2",
    "webpack-merge": "^4.1.0"
  }
}
